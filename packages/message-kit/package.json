{
    "name": "@napgram/message-kit",
    "version": "0.1.4",
    "description": "Message conversion pipeline for NapGram",
    "main": "./dist/index.js",
    "types": "./src/index.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./src/index.ts",
            "import": "./src/index.ts",
            "default": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "dev": "tsc -p tsconfig.json --watch",
        "test": "vitest",
        "test:coverage": "vitest --coverage"
    },
    "keywords": [
        "napgram",
        "message",
        "converter"
    ],
    "author": "NapGram Team",
    "license": "MIT",
    "dependencies": {
        "@mtcute/core": "^0.27.4",
        "@napgram/infra-kit": "workspace:*",
        "@napgram/media-kit": "workspace:*",
        "@napgram/runtime-kit": "workspace:*",
        "file-type": "^21.2.0",
        "image-js": "^1.3.0"
    },
    "devDependencies": {
        "@types/node": "25.0.3",
        "@vitest/coverage-v8": "4.0.16",
        "typescript": "5.9.3",
        "vitest": "4.0.16"
    }
}