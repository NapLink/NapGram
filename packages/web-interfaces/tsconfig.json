{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "../../",
        "composite": true,
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "jsx": "react",
        "jsxFactory": "Html.createElement",
        "jsxFragmentFactory": "Html.Fragment",
        "plugins": [
            {
                "name": "@kitajs/ts-html-plugin"
            }
        ]
    },
    "references": [
        {
            "path": "../infra-kit"
        },
        {
            "path": "../runtime-kit"
        },
        {
            "path": "../plugin-kit"
        },
        {
            "path": "../auth-kit"
        },
        {
            "path": "../message-kit"
        },
        {
            "path": "../telegram-client"
        }
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}